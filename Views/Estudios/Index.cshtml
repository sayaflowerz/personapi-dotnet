@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="nav-link nav-home" href="http://localhost:9090/Estudios/Create">Create</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CcPer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Univer)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.CcPer)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Univer)
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-idProf="@item.IdProf" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-idProf="@item.IdProf" class="btn btn-info">Details</a>
                            <form asp-action="Delete" asp-route-ccPer="@item.CcPer" asp-route-idProf="@item.IdProf" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este estudio?');">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>

